  delete: (params, callback) => doc.delete(Object.assign({}, defaultParams, params), callback),
  get: (params, callback) => doc.get(Object.assign({}, defaultParams, params), callback),
  put: (params, callback) => doc.put(Object.assign({}, defaultParams, params), callback),
  query: (params, callback) => doc.query(Object.assign({}, defaultParams, params), callback),
  scan: (params, callback) => doc.scan(Object.assign({}, defaultParams, params), callback),
